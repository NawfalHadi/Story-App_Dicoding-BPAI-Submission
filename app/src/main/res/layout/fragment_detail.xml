<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:id="@+id/space_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintVertical_bias="0.80"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Space
        android:id="@+id/space_unseen"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_detail"
        android:transitionName="CardImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"

        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/story"
            android:src="@drawable/ic_launcher_background"/>

        <ImageView
            android:id="@+id/black_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.75"
            android:src="@color/black"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_original"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        android:src="@drawable/profile"
        android:visibility="gone"

        android:foregroundGravity="center"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="@id/cardview_detail"
        app:layout_constraintBottom_toBottomOf="@id/cardview_detail"
        app:layout_constraintStart_toStartOf="@id/cardview_detail"
        app:layout_constraintEnd_toEndOf="@id/cardview_detail"
        tools:ignore="ContentDescription" />


    <ImageButton
        android:id="@+id/btn_fullscreen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_fullscreen"
        android:background="@color/transparant"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        app:tint="@color/white"

        android:layout_margin="18dp"
        app:layout_constraintTop_toTopOf="@id/cardview_detail"
        app:layout_constraintEnd_toEndOf="@id/cardview_detail"
        android:contentDescription="@string/rotate_image" />

    <ImageButton
        android:id="@+id/btn_fullscreen_exit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_fullscreen_exit"
        android:background="@color/transparant"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        app:tint="@color/white"
        android:visibility="gone"

        android:layout_margin="18dp"
        app:layout_constraintTop_toTopOf="@id/cardview_detail"
        app:layout_constraintEnd_toEndOf="@id/cardview_detail"
        android:contentDescription="@string/rotate_image" />

    <ImageView
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_circle_white"
        android:elevation="2dp"

        app:layout_constraintBottom_toBottomOf="@id/space_unseen"
        app:layout_constraintTop_toTopOf="@id/space_bottom"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_names"
        android:transitionName="TextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="?attr/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:elevation="2dp"

        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/iv_profile"
        app:layout_constraintStart_toStartOf="@id/iv_profile"
        app:layout_constraintEnd_toEndOf="@id/iv_profile"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lorem_ipsum"
        android:elevation="3dp"
        android:gravity="center"


        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_names"
        app:layout_constraintStart_toStartOf="@id/cardview_detail"
        app:layout_constraintEnd_toEndOf="@id/cardview_detail"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:transitionName="ImageProfile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_launcher_background"
        android:elevation="3dp"

        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_view"
        app:layout_constraintTop_toTopOf="@id/bottom_view"
        app:layout_constraintStart_toStartOf="@id/bottom_view"
        app:layout_constraintEnd_toEndOf="@id/bottom_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>